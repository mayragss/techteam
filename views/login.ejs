<!DOCTYPE html>
<head>

    <meta charset="utf-8">
    <title>TECHTEAM</title>
    <meta name="author" content="Mayra Gomes">

    <!-- mobile 
    ------------------------------------------------------------------------------ -->
    <link rel="icon" type="image/jpg" href="/images/teste.jpg"/>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">



<!-- Latest compiled and minified CSS -->
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">


<style>



.outer-wrapper { 
display: table;
width: 100%;
height: 100%;
}

.inner-wrapper {
  display:table-cell;
  vertical-align:middle;

}
.login-btn { position:fixed; top:15px; right:15px; }





</style>
</head>

<!-- Optional theme -->
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap-theme.min.css">

<body>

<nav class="navbar navbar-default">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand" href="/">TECHTEAM</a>
            </div>
            <div class="collapse navbar-collapse">
                <ul class="nav navbar-nav navbar-right">
                    <% if(!currentUser){ %>
                        <li><a href="/login">Entrar</a></li>
                        <li><a href="/register">Cadastre-se</a></li>
                    <% } else { %>
                        <li><a href="#">Logado como <i> <%= currentUser.username %></i></a></li>
                        <li><a href="/logout">Sair</a></li>
                    <% } %>
                </ul>
            </div>
        </div>
    </nav>
    
    <div class="container">
        
        <% if(error && error.length > 0){ %>
            <div class="alert alert-danger" role="alert">
                <%= error %>
            </div>
        <% } %>
        <% if(success && success.length > 0){ %>
            <div class="alert alert-success" role="alert">
                <%= success %>
            </div>
        <% } %>
    </div>


<section id="loginform" class="outer-wrapper">

  <div class="inner-wrapper">
<div class="container">
  <div class="row">
    <div class="col-sm-4 col-sm-offset-4">
      <h2 class="text-center">Bem-Vindo de Volta!</h2>
      <form action="/login" method="POST">
  <div class="form-group">
    <label for="exampleInputEmail1">Nome de Usuário</label>
    <input type="text" name="username" class="form-control" placeholder="Insira o seu usuário">
  </div>
  <div class="form-group">
    <label for="exampleInputPassword1">Password</label>
    <input type="password" name="password" class="form-control" placeholder="Insira a sua senha">
  </div>
  
  <div class="checkbox">
    <label>
      <input type="checkbox"> Lembrar de mim
    </label>
  </div>
  <button type="submit" value="Login!" class="btn btn-default">Entrar</button>
</form>
    </div>
  </div>
</div>
</div>

</section>


</body>
</html>